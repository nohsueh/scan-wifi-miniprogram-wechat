page {
    height: 100vh;
    display: flex;
    flex-direction: column;
}

.operate-area {
    margin: 30rpx 3vh 0vh 3vh;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}

.search-area {
    width: 500rpx;
    padding: 10rpx;
    border-radius: 17rpx;
    box-shadow: 0px 0px 5rpx 1rpx rgba(68, 95, 110, 0.5);
    display: flex;
    flex-direction: row;
    align-items: center;
}

.search-area:active {
    box-shadow: 0px 0px 17rpx 3rpx rgba(68, 95, 110, 0.5);
}

.btn-add {
    width: 100rpx;
    padding: 10rpx;
    margin-left: auto;
    background-color: antiquewhite;
    border-radius: 17rpx;
    box-shadow: 0px 0px 5rpx 1rpx rgba(68, 95, 110, 0.5);
    text-align: center;
}

.btn-add:active {
    box-shadow: 0px 0px 17rpx 3rpx rgba(68, 95, 110, 0.5);
}

.scroll-area {
    height: 100vh;
    flex: 1;
    overflow-y: scroll;
}

.scroll-footer {
    height: 37vh;
}

.scroll-item {
    height: 5vh;
    margin: 5vh 5vh 5vh 5vh;
    padding: 1vh 1vh 1vh 1vh;
    border-radius: 13rpx;
    background-color: rgba(18, 149, 219, 0.8);
    box-shadow: 0px 0px 5rpx 1rpx rgba(68, 95, 110, 0.8);

    text-align: center;
}

.scroll-item:active {
    box-shadow: 0px 0px 17rpx 3rpx rgba(68, 95, 110, 0.8);
}